<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:ui="@wuilmerj24/list-pager" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="list-pager" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
		<ui:ListPager items="{{items}}" width="100%" height="30%">
			<ui:ListPager.itemTemplate>
                <GridLayout>
                    <Label text="{{ title }}" class="label" />
                </GridLayout>
            </ui:ListPager.itemTemplate>
        </ui:ListPager>
    </StackLayout>
</Page>