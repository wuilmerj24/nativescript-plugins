<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="signalr" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Conectar" tap="{{ conectar }}" class="btn btn-primary"/>
            <Button text="Desconectar" tap="{{ desconectar }}" class="btn btn-primary"/>
            <Button text="State" tap="{{ getStaateConn }}" class="btn btn-primary"/>
            <Button text="Invoke" tap="{{ invoke }}" class="btn btn-primary"/>
            <Button text="Send" tap="{{ ons }}" class="btn btn-primary"/>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>