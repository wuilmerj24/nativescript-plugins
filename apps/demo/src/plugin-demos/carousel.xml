<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:cr="@wuilmerj24/carousel" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="carousel" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
		<cr:Carousel items="{{myItems}}" width="100%" height="35%">
			<cr:Carousel.itemTemplate>
				<GridLayout padding="16" columns="20, *">
					<ContentView width="20" height="20" borderRadius="20" backgroundColor="#65adf1" />
					<Label text="text" col="1" textWrap="true" marginLeft="8" backgroundColor="white"/>
				</GridLayout>
			</cr:Carousel.itemTemplate>
		</cr:Carousel>   
    </StackLayout>
</Page>